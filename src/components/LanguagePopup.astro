<div id="lang-popup" class="lang-popup" aria-modal="true" role="dialog">
  <div class="lang-popup__backdrop"></div>
  <div class="lang-popup__box">
    <p class="lang-popup__eyebrow">NGUYEN VU QUOC HUNG</p>
    <div class="lang-popup__divider"></div>
    <p class="lang-popup__prompt">CHOOSE YOUR LANGUAGE</p>
    <div class="lang-popup__buttons">
      <button class="lang-popup__btn" data-choose="en">EN</button>
      <span class="lang-popup__sep">â€”</span>
      <button class="lang-popup__btn" data-choose="vi">VI</button>
    </div>
  </div>
</div>

<script>
  const popup = document.getElementById('lang-popup');

  function applyLang(lang: string) {
    document.documentElement.setAttribute('data-lang', lang);
    sessionStorage.setItem('preferred-lang', lang);
  }

  function hidePopup() {
    popup!.classList.add('lang-popup--out');
    setTimeout(() => { popup!.style.display = 'none'; }, 600);
  }

  const saved = sessionStorage.getItem('preferred-lang');
  if (saved) {
    applyLang(saved);
    popup!.style.display = 'none';
  } else {
    requestAnimationFrame(() => popup!.classList.add('lang-popup--in'));
  }

  popup!.querySelectorAll<HTMLButtonElement>('[data-choose]').forEach(btn => {
    btn.addEventListener('click', () => {
      applyLang(btn.getAttribute('data-choose')!);
      hidePopup();
    });
  });
</script>

<style>
.lang-popup {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.6s ease;
}

.lang-popup--in {
  opacity: 1;
  pointer-events: all;
}

.lang-popup--out {
  opacity: 0;
  pointer-events: none;
}

.lang-popup__backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.lang-popup__box {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 2.25rem 3rem 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
}

.lang-popup__eyebrow {
  font-family: 'Oswald', sans-serif;
  font-size: 0.6rem;
  font-weight: 400;
  letter-spacing: 0.35em;
  color: rgba(255,255,255,0.2);
  margin-bottom: 1.1rem;
}

.lang-popup__divider {
  width: 24px;
  height: 1px;
  background: rgba(255,255,255,0.12);
  margin-bottom: 1.1rem;
}

.lang-popup__prompt {
  font-family: 'Inter', sans-serif;
  font-size: 0.7rem;
  font-weight: 300;
  letter-spacing: 0.18em;
  color: rgba(255,255,255,0.3);
  margin-bottom: 1.75rem;
}

.lang-popup__buttons {
  display: flex;
  align-items: center;
  gap: 1.25rem;
}

.lang-popup__btn {
  font-family: 'Oswald', sans-serif;
  font-size: 0.85rem;
  font-weight: 400;
  letter-spacing: 0.25em;
  color: rgba(255,255,255,0.45);
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0.25rem 0;
  transition: color 0.2s ease;
  position: relative;
}

.lang-popup__btn::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 1px;
  background: #fff;
  transition: width 0.25s ease;
}

.lang-popup__btn:hover {
  color: #fff;
}

.lang-popup__btn:hover::after {
  width: 100%;
}

.lang-popup__sep {
  font-size: 0.6rem;
  color: rgba(255,255,255,0.12);
  user-select: none;
}
</style>
