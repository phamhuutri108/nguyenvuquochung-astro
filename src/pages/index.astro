---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Nguyễn Vũ Quốc Hưng" currentPath="/" showSidebar={true}>
  <div class="home">
    <!-- Language toggle positioned top-right (already in BaseLayout), but override position for home -->
    <div class="home__lang-area">
      <!-- LanguageToggle is rendered by BaseLayout -->
    </div>

    <!-- Left: Profile photo + name -->
    <a href="/about" class="home__profile" aria-label="About Nguyen Vu Quoc Hung">
      <div class="home__photo-wrap">
        <img
          src="/images/profile-image.png"
          alt="Nguyễn Vũ Quốc Hưng"
          class="home__photo"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
        />
        <!-- Fallback placeholder -->
        <div class="home__photo-placeholder" style="display:none">
          <span>NVQ</span>
        </div>
      </div>
      <h1 class="home__name">
        NGUYỄN VŨ<br />QUỐC HƯNG
      </h1>
    </a>

    <!-- Right: Navigation -->
    <nav class="home__nav" aria-label="Main navigation">
      <ul>
        <li>
          <a href="/" class="home__nav-link active">
            <span class="l-en">HOME</span>
            <span class="l-vi">TRANG CHỦ</span>
          </a>
        </li>
        <li>
          <a href="/about" class="home__nav-link">
            <span class="l-en">ABOUT</span>
            <span class="l-vi">VỀ TÔI</span>
          </a>
        </li>
        <li>
          <a href="/projects" class="home__nav-link">
            <span class="l-en">MY PROJECTS</span>
            <span class="l-vi">DỰ ÁN</span>
          </a>
        </li>
        <li>
          <a href="/contact" class="home__nav-link">
            <span class="l-en">CONTACT</span>
            <span class="l-vi">LIÊN HỆ</span>
          </a>
        </li>
      </ul>
    </nav>

  </div>
</BaseLayout>

<style>
/* ── Home: exact viewport, no scroll ── */
.home {
  display: grid;
  grid-template-columns: 55% 45%;
  height: 100vh;
  height: 100svh;
  overflow: hidden;
}

/* ── Left: profile fills full viewport height ── */
.home__profile {
  position: relative;
  height: 100vh;
  height: 100svh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  text-decoration: none;
  cursor: pointer;
}

.home__photo-wrap {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
}

/* Transparent PNG: height = 100%, width scales naturally — no crop, no mask */
.home__photo {
  height: 100%;
  width: auto;
  display: block;
  object-fit: contain;
  object-position: bottom left;
  transition: transform 0.7s ease;
}

.home__profile:hover .home__photo {
  transform: scale(1.015);
}

.home__photo-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Barlow Condensed', sans-serif;
  font-size: 5rem;
  font-weight: 900;
  color: rgba(255,255,255,0.08);
}

/* Name overlaid bottom-left */
.home__name {
  position: relative;
  z-index: 2;
  font-family: 'Barlow Condensed', 'Oswald', sans-serif;
  font-size: clamp(2.8rem, 6.5vw, 5.5rem);
  font-weight: 900;
  font-style: italic;
  line-height: 0.9;
  color: var(--color-accent);
  letter-spacing: 0.02em;
  padding: 1.5rem 1.75rem;
  transition: color 0.2s;
}

.home__profile:hover .home__name {
  color: #e60000;
}

/* ── Right: navigation centered ── */
.home__nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 3rem 3rem 3rem 4rem;
}

.home__nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.home__nav-link {
  display: block;
  font-family: 'Oswald', sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.4rem);
  font-weight: 400;
  letter-spacing: 0.2em;
  color: rgba(255,255,255,0.65);
  text-decoration: none;
  padding: 0.4rem 0;
  transition: color 0.2s, letter-spacing 0.2s;
  position: relative;
}

.home__nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 1px;
  background: var(--color-accent);
  transition: width 0.3s ease;
}

.home__nav-link:hover {
  color: #fff;
  letter-spacing: 0.25em;
}

.home__nav-link:hover::after {
  width: 100%;
}

.home__nav-link.active {
  color: rgba(255,255,255,0.3);
  font-size: 0.85em;
  pointer-events: none;
}

/* i18n */
[data-lang="en"] .l-vi { display: none; }
[data-lang="vi"] .l-en { display: none; }

/* ── Mobile ── */
@media (max-width: 768px) {
  .home {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
  }

  .home__profile {
    height: 70svh;
  }

  .home__photo {
    height: 100%;
    width: auto;
    object-position: bottom center;
  }

  .home__name {
    font-size: clamp(2.2rem, 10vw, 3.5rem);
    padding: 1rem 1.25rem;
  }

  .home__nav {
    padding: 1.75rem 1.5rem 2rem;
  }
}
</style>
