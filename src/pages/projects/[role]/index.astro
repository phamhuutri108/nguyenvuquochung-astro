---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

type Role = 'production' | 'editor' | 'director' | 'assistant-director';

const roleMeta: Record<Role, { en: string; vi: string; color: string }> = {
  production: { en: 'PRODUCTION', vi: 'SẢN XUẤT', color: '#CC0000' },
  editor: { en: 'EDITOR', vi: 'DỰNG PHIM', color: '#2255DD' },
  director: { en: 'DIRECTOR', vi: 'ĐẠO DIỄN', color: '#22AA44' },
  'assistant-director': { en: 'ASSISTANT DIRECTOR', vi: 'TRỢ LÝ ĐẠO DIỄN', color: '#DD9900' },
};

export async function getStaticPaths() {
  const roles: Role[] = ['production', 'editor', 'director', 'assistant-director'];
  const paths = [];

  for (const role of roles) {
    const projects = await getCollection(role as any);
    paths.push({ params: { role }, props: { projects, role } });
  }

  return paths;
}

const { role, projects: rawProjects } = Astro.props as {
  role: Role;
  projects: CollectionEntry<any>[];
};

const projects = rawProjects
  .filter((p: any) => !p.data.draft)
  .sort((a: any, b: any) => (a.data.order ?? 0) - (b.data.order ?? 0));

const meta = roleMeta[role];
---

<BaseLayout
  title={`${meta.en} — Nguyễn Vũ Quốc Hưng`}
  currentPath={`/projects/${role}`}
>
  <div class="role-page">

    <!-- Header -->
    <header class="role-page__header">
      <a href="/projects" class="role-page__back">
        <span class="l-en">← MY PROJECTS</span>
        <span class="l-vi">← DỰ ÁN</span>
      </a>
      <h1 class="role-page__title" style={`color: ${meta.color}`}>
        <span class="l-en">{meta.en}</span>
        <span class="l-vi">{meta.vi}</span>
      </h1>
    </header>

    <!-- Grid -->
    <div class="role-page__grid">
      {projects.length === 0 ? (
        <p class="role-page__empty">
          <span class="l-en">No projects yet. Check back soon.</span>
          <span class="l-vi">Chưa có dự án. Hãy quay lại sau.</span>
        </p>
      ) : (
        projects.map((project: any) => (
          <a href={`/projects/${role}/${project.slug}`} class="project-card">
            <div class="project-card__image-wrap">
              {project.data.coverImage ? (
                <img
                  src={project.data.coverImage}
                  alt={project.data.title}
                  class="project-card__image"
                  loading="lazy"
                  onerror="this.closest('.project-card__image-wrap').classList.add('no-img')"
                />
              ) : (
                <div class="project-card__no-image">
                  <span style={`color: ${meta.color}`}>NVQ</span>
                </div>
              )}
              <div class="project-card__overlay"></div>
            </div>
            <div class="project-card__info">
              <h2 class="project-card__title">
                <span class="l-en">{project.data.title}</span>
                <span class="l-vi">{project.data.titleVi || project.data.title}</span>
              </h2>
              {project.data.year && (
                <span class="project-card__year">{project.data.year}</span>
              )}
              {project.data.description && (
                <p class="project-card__desc">
                  <span class="l-en">{project.data.description}</span>
                  <span class="l-vi">{project.data.descriptionVi || project.data.description}</span>
                </p>
              )}
            </div>
          </a>
        ))
      )}
    </div>

  </div>
</BaseLayout>

<style>
.role-page {
  padding: 5rem 3rem 4rem;
  max-width: 1200px;
  margin: 0 auto;
}

.role-page__header {
  margin-bottom: 3rem;
}

.role-page__back {
  display: inline-block;
  font-family: 'Oswald', sans-serif;
  font-size: 0.75rem;
  letter-spacing: 0.2em;
  color: rgba(255,255,255,0.35);
  text-decoration: none;
  margin-bottom: 1rem;
  transition: color 0.2s;
}

.role-page__back:hover {
  color: rgba(255,255,255,0.7);
}

.role-page__title {
  font-family: 'Barlow Condensed', 'Oswald', sans-serif;
  font-size: clamp(2.5rem, 6vw, 5rem);
  font-weight: 900;
  font-style: italic;
  letter-spacing: 0.02em;
  line-height: 1;
}

.role-page__empty {
  font-family: 'Inter', sans-serif;
  font-size: 0.9rem;
  color: rgba(255,255,255,0.35);
  padding: 3rem 0;
  grid-column: 1 / -1;
}

/* Project grid */
.role-page__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
}

.project-card {
  display: block;
  text-decoration: none;
  background: rgba(255,255,255,0.02);
  border: 1px solid rgba(255,255,255,0.07);
  transition: border-color 0.3s, transform 0.3s;
}

.project-card:hover {
  border-color: rgba(255,255,255,0.2);
  transform: translateY(-4px);
}

.project-card__image-wrap {
  position: relative;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  background: rgba(255,255,255,0.04);
}

.project-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(30%);
  transition: transform 0.5s ease, filter 0.3s;
}

.project-card:hover .project-card__image {
  transform: scale(1.05);
  filter: grayscale(0%);
}

.project-card__no-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Barlow Condensed', sans-serif;
  font-size: 3.5rem;
  font-weight: 900;
  opacity: 0.15;
}

.project-card__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 60%);
}

.project-card__info {
  padding: 1rem 1.25rem 1.25rem;
}

.project-card__title {
  font-family: 'Oswald', sans-serif;
  font-size: 1rem;
  font-weight: 500;
  letter-spacing: 0.08em;
  color: #fff;
  margin-bottom: 0.4rem;
}

.project-card__year {
  font-family: 'Inter', sans-serif;
  font-size: 0.72rem;
  color: rgba(255,255,255,0.3);
  letter-spacing: 0.1em;
  display: block;
  margin-bottom: 0.5rem;
}

.project-card__desc {
  font-family: 'Inter', sans-serif;
  font-size: 0.8rem;
  line-height: 1.6;
  color: rgba(255,255,255,0.45);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* i18n */
[data-lang="en"] .l-vi { display: none; }
[data-lang="vi"] .l-en { display: none; }

@media (max-width: 600px) {
  .role-page {
    padding: 4rem 1.5rem 3rem;
  }

  .role-page__grid {
    grid-template-columns: 1fr;
  }
}
</style>
